[queue]
url = amqp://<%= node['margarine']['queue_user'] %>:<%= node['margarine']['queue_password'] %>@<%= node['margarine']['queue_hostname'] %>

[datastore]
url = mongodb://<%= node['margarine']['mongodb_user'] %>:<%= node['margarine']['mongodb_password'] %>@<%= node['margarine']['mongodb_connection_string'] %>/<%= node['margarine']['mongodb_database'] %>

[keystore]
url = <%= node['margarine']['redis_url'] %>

[email]
url = smtp://<%= node['margarine']['spread']['mailgun_email'] %>:<%= node['margarine']['spread']['mailgun_password'] %>@smtp.mailgun.org
from = <%= node['margarine']['spread']['from_email'] %>

[server]
name = <%= node['margarine']['spread']['api_server_hostname'] %>