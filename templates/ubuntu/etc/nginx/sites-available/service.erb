server {
  listen 80;
  server_name <%= @name %>;

  access_log /var/log/nginx/<%= @name %>.access.log;
  error_log /var/log/nginx/<%= @name %>.error.log;

  location / {
    root <%= node['margarine']['install']['method'] == 'source' ? node['margarine']['install']['path'] : '/' %>;

    uwsgi_pass <%= node['margarine']['service']['hostname'] %>:<%= node['margarine']['service']['port'] %>;
    include uwsgi_params;
  }
}
